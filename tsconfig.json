{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationDir": "./lib/types",
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
